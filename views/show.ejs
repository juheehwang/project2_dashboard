<!-- 표 작성하기 -->
      <table class="table table-hover" style="text-align: center">
        <thead>
          <tr>
            <th scope="col" >아이디</th>
            <th scope="col" >글 제목</th>
            <th scope="col">작성자</th>
            <th scope="col">조회수</th>
            <th scope="col">작성일</th>
            <th scope="col">삭제&수정</th>
          

          </tr>
        </thead>
        <tbody>
      
        <% data.forEach(function(item,index) {%>
        
          <tr>
            <td><%= item.id %></td>
            <td><a href='/detail/<%= item.id %>'><%= item.title %></a></td>
            <td><%= item.name %></td>
            <td><%= item.views %> views</td>
            <td><%= item.createdDate %></td>
            <td>
              
    <!-- <div class="btn-group btn-group-toggle" data-toggle="buttons"> -->
      <!-- <label class="btn btn-secondary active"> -->
        <a  href="/edit/<%= item.id %>" class="btn btn-outline-warning">수정하기</a>  
        <a class="btn btn-outline-danger" href="/delete/<%= item.id %>"  onclick="return alert('삭제가 진행됩니다')">삭제하기</a>
           <!-- </div> -->
           <% }) %>
            
              
          </td>
          </tr>
          
        </tbody>
       
      </table>


    <div class="btn-group btn-group-toggle" data-toggle="buttons">
   
      <a href="/write/" button type="button" class="btn btn-outline-primary pull-right" >작성하기</a>

</div>

